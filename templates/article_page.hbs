<div class="app-container">

  <article class="article">
    <header class="article__header">
      <h1 class="h1">{{#if article.internal}}
        <span class="visibility-internal" data-title="{{t 'internal'}}">
          <span class="visibility-internal-icon"></span>
        </span>
      {{/if}} {{article.title}}</h1>
    </header>

    <div class="subtle-wrap">
      <div class="content-body article-body">
        {{article.body}}
      </div>
      <div class="article-attachments">
        <ul class="attachments">
          {{#each attachments}}
            <li>
              <a href="{{url}}" target="_blank">{{name}}</a>
              <span>({{size}})</span>
            </li>
          {{/each}}
        </ul>
      </div>

      <div class="article-more-questions">
        {{request_callout}}
      </div>
    </div>
  </article>
</div>

<aside class="related-articles-list recent-articles">
    <div class="app-container">
    {{recent_articles}}
    </div>
</aside>

<aside class="related-articles-list related-articles">
    <div class="app-container">
    {{related_articles}}
    </div>
</aside>
