<div class="app-container">
    <nav class="breadcrumb">
    {{breadcrumbs}}
    </nav>
    <figure class="category-page__image category-page__image--{{category.id}}"></figure>
  <h1 class="h1">{{category.name}}</h1>
  <p class="category-description">{{category.description}}</p>
  {{#if category.sections}}
    <div class="questions">
      {{#each sections}}
        <section class="questions-list">
          <h2>
            {{#if internal}}
              <span class="visibility-internal" data-title="{{t 'internal'}}">
                <span class="visibility-internal-icon"></span>
              </span>
            {{/if}}
            <a class="h2" href="{{url}}">{{name}}</a>
          </h2>
          {{#if articles}}
            <ul class="article-list">
              {{#each articles}}
                <li {{#if promoted}} class="article-list__item--promoted" {{/if}} class="article-list__item">
                  {{#if promoted}}
                    <span data-title="{{t 'promoted'}}">â˜…</span>
                  {{/if}}
                  <a href="{{url}}">{{title}}</a>
                </li>
              {{/each}}
            </ul>

            {{#if more_articles}}
              <a href="{{url}}" class="see-all-articles">
                {{t 'show_all_articles' count=article_count}}
              </a>
            {{/if}}

          {{else}}
            <i class="section-empty">
              <a href="{{url}}">{{t 'empty'}}</a>
            </i>
          {{/if}}
        </section>
      {{/each}}
    </div>

  {{else}}
    <i class="category-empty">
      <a href="{{category.url}}">{{t 'empty'}}</a>
    </i>
  {{/if}}
</div>