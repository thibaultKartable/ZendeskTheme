<div class="app-container app-container--section">
    <nav class="breadcrumb">
        {{breadcrumbs}}
    </nav>

    <h1 class="h1">{{#if section.internal}}
        <span class="visibility-internal" data-title="{{t 'internal'}}">
      <span class="visibility-internal-icon"></span>
    </span>
    {{/if}} {{section.name}} {{subscribe}}</h1>
<section class="questions-list">
  <p class="section-description">{{section.description}}</p>
  <div class="section-tree">{{#if section.articles}}
    <ul class="article-list">
      {{#each section.articles}}
          <li {{#if promoted}} class="article-list__item--promoted" {{/if}} class="article-list__item">
          {{#if promoted}}
            <span data-title="{{t 'promoted'}}">â˜…</span>
          {{/if}}
          <a href="{{url}}">{{title}}</a>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <i class="section-empty">
      <a href="{{section.url}}">{{t 'empty'}}</a>
    </i>
  {{/if}}

  {{pagination}}</div>
</section>
</div>